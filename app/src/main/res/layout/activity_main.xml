<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.barte.projektsi.MainActivity">

    <Spinner
        android:id="@+id/sClassifier"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvWybierzKlasyfikator"
        android:padding="10dp"
        android:popupBackground="?android:attr/colorPrimary"
        android:popupElevation="5dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="108dp" />

    <Button
        android:id="@+id/bKamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Włącz kamere"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/tvWybierzKlasyfikator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Wybierz klasyfikator"
        android:textSize="25sp" />

</RelativeLayout>
